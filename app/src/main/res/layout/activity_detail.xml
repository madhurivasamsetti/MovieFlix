<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vasam.movieflix.DetailActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="30sp"
                tools:text="movie original title" />

            <ImageView
                android:id="@+id/detail_image"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/movie_title"
                tools:background="@mipmap/ic_launcher_round"
                android:contentDescription="@string/content_description" />

            <TextView
                android:id="@+id/release_date"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/movie_title"
                android:layout_toEndOf="@id/detail_image"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                tools:text="release date" />

            <TextView
                android:id="@+id/user_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_alignStart="@+id/release_date"
                android:layout_below="@id/release_date"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                tools:text="user ratings of movie" />

            <TextView
                android:id="@+id/movie_overview"
               android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/detail_image"
                android:layout_below="@id/detail_image"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                tools:text="overview of movie" />
        </RelativeLayout>
    </ScrollView>


</merge>
